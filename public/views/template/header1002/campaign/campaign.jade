li(class="nav-item")
    div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
        div(class=mobileWrapper)
            if(dj[key].positionMenu=='center' ||dj[key].positionMenu=='bottom')
                - var c = 'page-stat nav-group campaign'
            else
                - var c = 'page-stat campaign'
            div(class=c,ng-if="global.get('campaign').val.length")
                a(href="/campaign",set-animate=dj[key].animate,data-animation=dj[key].animate)
                    span(class="part")=lang.campaign
