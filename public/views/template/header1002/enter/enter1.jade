li(class="nav-item")
    div(class=dj[key].wrapclass+pullClass)
        div(class=mobileWrapper)
            if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
                - var c = 'page-stat enter-block nav-group'
            else
                - var c = 'page-stat enter-block'
            div(class=c)
                span(class="icon-enter-img")
                a(class="enter-first",ng-hide="global.get('user').val",ng-click="global.get('functions').val.enter()")
                    | !{lang.login}
                    //span вход
                a(class="enter-first",ng-show="global.get('user').val",ng-click="global.get('functions').val.changeLocation('/manage')",ng-cloak)
                    | !{lang.cabinet}&nbsp;
                    //span кабинет
                a(class="enter-two",ng-show="global.get('user').val",ng-click="global.get('functions').val.logout()",ng-cloak)
                    | / !{lang.logout}
                    //span /  &nbsp;выход