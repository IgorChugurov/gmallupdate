div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'currency-box nav-group'
        else
            - var c = 'currency-box'
        div(class=c,uib-dropdown,id="changeCurrencyUl")
            a(href="",class="dropdown-toggle",uib-dropdown-toggle)
                - var c = 'currency icon-'+store.lang+'-img'
                span(class="part")
                    span(class=c,ng-class=currencyNgClass)
                    span(set-animate=dj[key].animate,data-animation=dj[key].animate,ng-bind="global.get('store').val['lang']")
                        !=store.lang
                    span(class="caret")
            if(store.langArr && store.langArr.length)
                ul(class="dropdown-menu",role="menu",uib-dropdown-menu)
                    -for(var i=0;i<store.langArr.length;i++)
                        -var l = store.langArr[i];
                        li
                            - var str = "global.get('functions').val.changeLang('"+l+"')"
                            a(ng-click=str)
                                -var iconClass = 'currency icon-'+l+'-img'
                                span(set-animate=dj[key].animate,data-animation=dj[key].animate,class=iconClass)=l
