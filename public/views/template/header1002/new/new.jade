div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'page-stat new nav-group'
        else
            - var c = 'page-stat new'
        div(class=c)
            a(href="/group/category?queryTag=",ui-sref="stuffs({'groupUrl':'group','categoryUrl':'category',queryTag:global.get('store').val.newTag})",ui-sref-opts="{reload:true}")
                span(class="part",set-animate=dj[key].animate,data-animation=dj[key].animate)=lang.new
        div(class="clearfix")