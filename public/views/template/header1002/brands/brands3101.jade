div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top'||dj[key].positionMenu=='bottom')
            menu-brands-pug
                div(class="hover-top-menu")
                    div(class="text-center myMenu",id="wrapperForBrands")
                        ul(class="nav-center catalogDropDownMenu")
                            - for (var i = 0; i < brands.length; i++)
                                - var brand=brands[i]
                                - var id='s'+brand._id
                                - var innerId="innerDiv"+i
                                - var href='/'+sections[0].url+'/category?brand='+brand.url
                                if(brands[i].display)
                                    li(id=id,class="mainli")
                                        if(store.template.clickMenu)
                                            a(class="section-name")
                                                span
                                                    !=brand.name
                                        if(!store.template.clickMenu)
                                            a(class="section-name",href=href)
                                                span
                                                    !=brand.name
                                        if(brand.tags.length)
                                            div(class="innerDiv text-left", id=innerId)
                                                div(class="container container-menu")
                                                    ul
                                                        if(store.newTag)
                                                            li(class="category-in-section")
                                                                a(href='/' + sections[0].url + '/category?brand='+brand.url+'&queryTag=' + store.newTag)
                                                                    span
                                                                        !=lang.new
                                                        if(store.saleTag)
                                                            li(class="category-in-section")
                                                                a(href='/' + sections[0].url + '/category?brand='+brand.url+'&queryTag=' + store.saleTag)
                                                                    span
                                                                        !=lang.sale
                                                        li(class="category-in-section")
                                                            - var href = '/'+sections[0].url+'/category?brand='+brand.url
                                                            a(href=href)
                                                                span=lang['allCategories']
                                                        each tag in brand.tags
                                                            li(class="category-in-section")
                                                                - var href =  '/'+sections[0].url+'/category?brand='+brand.url+'&brandTag='+tag.url
                                                                a(href=href)
                                                                    span
                                                                        !=tag.name
        else
            menu-brands-virtical-pug
                div(class="myMenuV", id="wrapperForBrands")
                    ul(class="catalog-menu")
                        - for (var i = 0; i < brands.length; i++)
                            - var brand=brands[i]

                            - var id='s'+brand._id
                            - var innerId="innerDiv"+i
                            - var href='/'+sections[0].url+'/category?brand='+brand.url
                            if(brands[i].display)
                                li(id=id,class="mainli")
                                    if(mobile || tablet)
                                        - href=null;
                                    else if((!section.categories.length || section.categories.length < 2) && !section.child.length)
                                        - href=null;
                                    else if(!store.template.clickMenu)
                                        - href=null;
                                    a(class="section-name",href=href)
                                        span
                                            !=brand.name

                                    if(mobile && !store.template.clickMenu)
                                        a(class="section-name")
                                            span
                                                !=brand.name
                                    if(mobile && store.template.clickMenu)
                                        a(class="section-name",href=href)
                                            span
                                                !=brand.name
                                    if(!mobile && !store.template.clickMenu)
                                        a(class="section-name",href=href)
                                            span
                                                !=brand.name
                                    if(!mobile && store.template.clickMenu &&((!section.categories.length || section.categories.length<2) && !section.child.length))
                                        a(class="section-name",href=href)
                                            span
                                                !=brand.name
                                    if(!mobile && store.template.clickMenu &&!((!section.categories.length || section.categories.length<2) && !section.child.length))
                                        a(class="section-name")
                                            span
                                                !=brand.name
                                    div
                                        ul
                                            each tag in brand.tags
                                                li(class="category-in-section")
                                                    - var href =  '/'+sections[0].url+'/category?brand='+brand.url+'&brandTag='+tag.url
                                                    a(href=href)
                                                        span
                                                            !=tag.name





