li(class="nav-item")
    div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
        div(class=mobileWrapper)
            - var c = 'nav-group info'
            if(dj[key].cache_key == 'menu2M')
                ul(class="info")
                    each page,index in stats
                        li
                            - var hr = "/stat/"+page.url
                            a(href=hr,set-animate=dj[key].animate,data-animation=dj[key].animate)
                                span(class="part")
                                    =page.name
            else
                div(class=c)
                    a(href="",ng-click="goToInfo()",set-animate=dj[key].animate,data-animation=dj[key].animate)
                        span(class="part")
                            span=lang.info
                            span(class="caret")
                    ul(class="menu-hover")
                        each page,index in stats
                            li
                                - var hr = "/stat/"+page.url
                                a(href=hr)
                                    span()
                                        =page.name

