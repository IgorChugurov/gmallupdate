div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
    div(class=mobileWrapper)
        - var c = 'nav-group info dropdown'
        if(dj[key].cache_key == 'menu2M')
            ul(class="info")
                each page,index in stats
                    li
                        - var hr = "/stat/"+page.url
                        a(class="page-name",href=hr)
                            span(class="part",set-animate=dj[key].animate,data-animation=dj[key].animate)
                                =page.name
        else
            div(class=c,uib-dropdown,is-open="status.isopen2")
                a(href="",class="dropdown-toggle",data-toggle="dropdown2",ng-click="goToInfo()",uib-dropdown-toggle)
                    span(class="part")
                        span(set-animate=dj[key].animate,data-animation=dj[key].animate)=lang.info
                        span(class="caret")
                ul(class="dropdown-menu",role="menu",uib-dropdown-menu)
                    each page,index in stats
                        li
                            - var hr = "/stat/"+page.url
                            a(class="page-name",href=hr)
                                span(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                    =page.name
