div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top'||dj[key].positionMenu=='bottom')
            menu-sections-pug
                div(class="hover-top-menu")
                    div(class="text-center myMenu",id="wrapperForSections")
                        ul(class="nav-center catalogDropDownMenu")
                            - for (var i = 0; i < sections.length; i++)
                                - var section=sections[i]
                                if(section.categories.length || section.child.length)
                                    - var id='s'+section._id
                                    - var innerId="innerDiv"+i
                                    - var innerData = !((!section.categories.length || section.categories.length < 2) && !section.child.length)
                                    - var href='/'+section.url+'/category'
                                    li(id=id,class="mainli")
                                        a(class="section-name",href=(innerData)?null:href)
                                            span
                                                !=section.name
                                        if(innerData)
                                            div(class="innerDiv text-left", id=innerId)
                                                div(class="container container-menu")
                                                    if(section.categories.length)
                                                        ul
                                                            if(store.newTag)
                                                                li(class="category-in-section")
                                                                    a(href='/' + section.url + '/category?queryTag=' + store.newTag)
                                                                        span
                                                                            !=lang.new
                                                            if(store.saleTag)
                                                                li(class="category-in-section")
                                                                    a(href='/' + section.url + '/category?queryTag=' + store.saleTag)
                                                                        span
                                                                            !=lang.sale
                                                            li(class="category-in-section")
                                                                - var href = '/'+section.url+'/category'
                                                                a(href=href)
                                                                    span=lang['allCategories']
                                                            each category in section.categories
                                                                if(!category.notActive)
                                                                    li(class="category-in-section")
                                                                        - var href =  '/'+section.url+'/'+category.url
                                                                        a(href=href)
                                                                            span
                                                                                !=category.name
                                                    if(!section.categories.length)
                                                        ul
                                                            if(store.newTag)
                                                                li(class="category-in-section")
                                                                    a(href='/' + section.url + '/category?queryTag=' + store.newTag)
                                                                        span
                                                                            !=lang.new
                                                            if(store.saleTag)
                                                                li(class="category-in-section")
                                                                    a(href='/' + section.url + '/category?queryTag=' + store.saleTag)
                                                                        span
                                                                            !=lang.sale
                                                    if(section.child.length)
                                                        ul
                                                            each child in section.child
                                                                - var href = '/'+child.url+'/category'
                                                                li(class="section-in-section")
                                                                    a(class="category-name", href=href)
                                                                        span
                                                                            !=child.name
                                                                    ul
                                                                        - var href = '/'+child.url+'/category'
                                                                        a(href=href)
                                                                            span=lang['allCategories']
                                                                        each category in child.categories
                                                                            if(!category.notActive)
                                                                                li(class="category-in-section")
                                                                                    - var href =  '/'+child.url+'/'+category.url;
                                                                                    a(href=href)
                                                                                        span
                                                                                            !=category.name
        else
            menu-sections-virtical-pug
                div(class="myMenuV", id="wrapperForSections")
                    ul(class="catalog-menu")
                        - for (var i = 0; i < sections.length; i++)
                            - var section=sections[i]
                            - var id='s'+section._id
                            - var innerData = !((!section.categories.length || section.categories.length < 2) && !section.child.length)
                            - var href = '/'+section.url+'/category'
                            li(id=id,class="mainli")
                                a(class="section-name",href=(innerData)?null:href)
                                    span
                                        !=section.name
                                div
                                    if(innerData)
                                        ul
                                            if(store.newTag)
                                                li(class="category-in-section")
                                                    a(href='/' + section.url + '/category?queryTag=' + store.newTag)
                                                        span
                                                            !=lang.new
                                            if(store.saleTag)
                                                li(class="category-in-section")
                                                    a(href='/' + section.url + '/category?queryTag=' + store.saleTag)
                                                        span
                                                            !=lang.sale
                                            li(class="category-in-section")
                                                - var href = '/'+section.url+'/category'
                                                a(href=href)
                                                    span=lang['allCategories']
                                            each category in section.categories
                                                if(!category.notActive)
                                                    li(class="category-in-section")
                                                        - var href =  '/'+section.url+'/'+category.url
                                                        a(href=href)
                                                            span
                                                                !=category.name
                                            each child in section.child
                                                - var href = '/'+child.url+'/category'
                                                li
                                                    a(class="category-name", href=href)
                                                        span
                                                            !=child.name
                                                    ul
                                                        each category in child.categories
                                                            if(!category.notActive)
                                                                li
                                                                    - var href =  '/'+child.url+'/'+category.url
