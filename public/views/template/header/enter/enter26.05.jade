div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'page-stat enter-block nav-group'
        else
            - var c = 'page-stat enter-block'
        div(class=c)
            span(class="part")
                a(class="enter-first",ng-if="!global.get('user').val",ng-click="global.get('functions').val.enter()")
                    span(set-animate=dj[key].animate,data-animation=dj[key].animate)
                        | !{lang.login}
                    //span вход
                a(class="enter-first",ng-if="global.get('user').val",ng-click="global.get('functions').val.changeLocation('/manage')")
                    span(set-animate=dj[key].animate,data-animation=dj[key].animate)
                        | !{lang.cabinet}&nbsp;
                    //span кабинет
                span(class="slash",ng-if="global.get('user').val") /
                a(class="enter-two",ng-if="global.get('user').val",ng-click="global.get('functions').val.logout()")
                    span(set-animate=dj[key].animate,data-animation=dj[key].animate)
                        | !{lang.logout}
                    //span /  &nbsp;выход
                div(class="clearfix")