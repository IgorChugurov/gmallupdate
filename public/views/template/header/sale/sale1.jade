            a(class="animation-a",href="/group/category?queryTag=",ui-sref="stuffs({'groupUrl':'group','categoryUrl':'category',queryTag:global.get('store').val.saleTag})",ui-sref-opts="{reload:true}")
                span(class="part")=lang.sale
        div(class="clearfix")