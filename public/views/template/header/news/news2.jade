div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'page-stat news nav-group'
        else
            - var c = 'page-stat news'
        div(class=c)
            a(href="/news"+dj[key].addLink,set-animate=dj[key].animate,data-animation=dj[key].animate)
                if(store.nameLists.newsList)
                    span(class="part")=store.nameLists.newsList
                else
                    span(class="part")=lang['news']
        div(class="clearfix")