div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'currency-box nav-group'
        else
            - var c = 'currency-box'
        div(class=c,id="changeCurrencyUl")
            ul(class="lang-wrap")
                -for(var i=0;i<store.currencyArr.length;i++)
                    -var c=store.currencyArr[i]
                    li
                        - var str = "global.get('functions').val.changeCurrency('"+c.toUpperCase()+"')"
                        a(class="currency-inner",ng-click=str,ng-class="{'active':global.get('currency').val=='" + c + "'}")
                            -var iconClass = 'currency icon-'+c.toLowerCase()+'-img'
                            span(class=iconClass)
                            span(set-animate=dj[key].animate,data-animation=dj[key].animate)=store.currency[c][2]
            div(class="clearfix")
        div(class="clearfix")
