div(class=dj[key].wrapclass+pullClass,set-animate=dj[key].blockAnimate,data-animation=dj[key].blockAnimate,data-animation-delay=dj[key].animationDelay)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'currency-box nav-group'
        else
            - var c = 'currency-box'
        div(class=c,uib-dropdown,id="changeCurrencyUl")
            a(href="",class="dropdown-toggle",ng-click="goToCurrency()",uib-dropdown-toggle)
                - var c = 'currency icon-'+store.mainCurrency.toLowerCase()+'-img'
                span(class=c,ng-class=currencyNgClass)
                span(set-animate=dj[key].animate,data-animation=dj[key].animate,ng-bind="global.get('store').val['currency'][global.get('currency').val][2]")
                    !=store.mainCurrency
                span(class="caret")
            ul(class="dropdown-menu",role="menu",uib-dropdown-menu)
                -for(var i=0;i<store.currencyArr.length;i++)
                    -var c=store.currencyArr[i]
                    li
                        - var str = "global.get('functions').val.changeCurrency('"+c.toUpperCase()+"')"
                        a(ng-click=str)
                            -var iconClass = 'currency icon-'+c.toLowerCase()+'-img'
                            span(class=iconClass)
                            span(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                !=store.currency[c][2]
            div(class="clearfix")
        div(class="clearfix")