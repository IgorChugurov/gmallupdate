div(class=dj[key].wrapclass+pullClass)
    div(class=mobileWrapper)
        if(dj[key].positionMenu=='top' ||dj[key].positionMenu=='bottom')
            - var c = 'lang-box nav-group'
        else
            - var c = 'lang-box'
        div(class=c,id="changeCurrencyUl")
            if(store.langArr && store.langArr.length)
                ul(class="lang-wrap")
                    -for(var i=0;i<store.langArr.length;i++)
                        -var l = store.langArr[i];
                        li
                            - var str = "global.get('functions').val.changeLang('"+l+"')"

                            a(ng-click=str,ng-class="{'active':global.get('store').val.lang=='"+l+"'}")
                                    -var iconClass = 'currency icon-'+l+'-img'
                                    span(set-animate=dj[key].animate,data-animation=dj[key].animate,class=iconClass)=l
                div(class="clearfix")