div(class="thumbnail list-item",id='item-'+item._id)
    div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 news-stuff-img")
        a(href=dj[key].href+item.url)
            if(item.imgs && item.imgs.length)
                .page-slides
                    div(gmall-slider-page=item.url)
                        div(class="substrate")
                            img(class="img-responsive",src=photoHost + '/' + item.imgs[0].img)
                        - for (var i = 0; i < item.imgs.length; ++i)
                            div(id=dj[key].wrapclass + 'page' + i,class="mytoggle-page")
                                img(class="img-responsive",src=photoHost + '/' + item.imgs[i].img)

                        //h1(ng-bind="sliders."+item.url+".index",style="z-index:2000")

            if(item.img)
                img(style="width:100%", src=photoHost + '/' + item.img)
            if(item.video)
                div
                    | !{item.video}
    div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 news-stuff-desk")
        a(href=dj[key].href+item.url)
            div(class="form-group")
                if(item.name)
                    h2=item.name
                if(item.position)
                    h4=item.position
                if(item.desc)
                    p=item.desc.clearTag().substring(0.150)
            //div(class="social-hub-stuff col-lg-8 news-stuff-date")
                social-hub
            h4(class="pull-right col-lg-4 news-stuff-date")=item.date
            div(class="clearfix")
    div(class="clearfix")