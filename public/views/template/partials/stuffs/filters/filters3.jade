div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
            div(class="filters-block",ng-hide="$ctrl.$stateParams.categoryUrl=='category'&& !$ctrl.global.get('store').val.template.stuffListType[$ctrl.global.get('sectionType').val].filtersForAll")
                div(class="form-group")
                    a(class="filters-of-stuff", ng-click="$ctrl.filterList()",title="{{$ctrl.global.get('lang').val.filters}}")
                        span(class="icon-filters-img")
                        span(class="filters-name",ng-bind="$ctrl.global.get('lang').val.filters")
        div(class="clearfix")
