div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        categories-for-list-template1(padding="padding")
            div(class="categories-for-list")
                if(dj[key].categories.length && dj[key].categories.length > 1)
                    div(class="")
                        a(class="categories-stuff",href=dj[key].allCategoriesLink,ng-class="{'active':$ctrl.category=='category'}",set-animate=dj[key].animate,data-animation=dj[key].animate)

                            span(class="text-center categories-name")=store.langData.allCategories
                        each category in dj[key].categories
                            a(class="categories-stuff",href=category.link,ng-class="{'active':$ctrl.category=='" + category.url + "'}",set-animate=dj[key].animate,data-animation=dj[key].animate)

                                span(class="text-center categories-name")=category.name
                        div(class="clearfix")
