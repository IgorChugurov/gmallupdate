div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        categories-for-list-template1(padding="padding")
            div(class="categories-for-list")
                if(dj[key].categories.length)
                    div(class="")
                        a(class="categories-stuff",href=dj[key].allCategoriesLink,ng-class="{'active':$ctrl.category=='category'}")
                            span(class="icon-categories-img")
                            span(class="text-center")=store.langData.allCategories
                        each category in dj[key].categories
                            a(class="categories-stuff",href=category.link,ng-class="{'active':$ctrl.category=='" + category.url + "'}")
                                span(class="icon-categories-img")
                                span(class="text-center")=category.name
                        div(class="clearfix")
