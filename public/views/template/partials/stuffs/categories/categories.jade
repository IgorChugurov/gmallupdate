div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        categories-for-list-template1(padding="padding")
            div(class="categories-for-list")
                if(dj[key].categories.length && dj[key].categories.length>1)
                    div(class="")
                        a(class="categories-stuff",href=dj[key].allCategoriesLink)
                            if(store.allCategories)
                                img(class="img-responsive img-categories",src=photoHost+'/'+store.allCategories,ng-class="{'img-active':$ctrl.category=='category'}")
                            span(class="text-center",ng-class="{'category-active':$ctrl.category=='category'}")=store.langData.allCategories
                        if(dj[key].section && dj[key].section.saleLink && store.saleTag)
                            a(class="categories-stuff",ng-click="$ctrl.changeCategory('category','sale')")
                                img(class="img-responsive img-categories",ng-src="{{::$ctrl.getFilterTagsPhoto('"+store.saleTag+"').img}}",ng-class="{'img-active':$ctrl.queryTag=='sale'}")
                                span(class="text-center",ng-class="{'category-active':$ctrl.queryTag=='sale'}")=store.langData.sale
                        if(dj[key].section && dj[key].section.newLink && store.newTag)
                            a(class="categories-stuff",ng-click="$ctrl.changeCategory('category','new')")
                                img(class="img-responsive img-categories",ng-src="{{::$ctrl.getFilterTagsPhoto('"+store.newTag+"').img}}",ng-class="{'img-active':$ctrl.queryTag=='new'}")
                                span(class="text-center",ng-class="{'category-active':$ctrl.queryTag=='new'}")=store.langData.new
                        each category in dj[key].categories
                            a(class="categories-stuff",href=category.link)
                                if(category.smallimg)
                                    img(class="img-responsive img-categories",src=photoHost+'/'+category.smallimg,ng-class="{'img-active':$ctrl.category=='" + category.url + "'}")
                                span(class="text-center",ng-class="{'category-active':$ctrl.category=='" + category.url + "'}")=category.name
                        div(class="clearfix")
                div(class="breadcrumbs")
                    span(class="breadcrumbs-box",ng-repeat="item in $ctrl.breadcrumbs")
                        span(ng-bind="item.name")
                        span(class="icon-cancel-img",ng-click="$ctrl.deleteCrumb($index)")
