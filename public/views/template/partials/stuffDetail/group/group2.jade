div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(ng-if="$ctrl.item.sortsOfStuff && $ctrl.item.sortsOfStuff.stuffs.length>1",class="color-box")
            div(class="name-box")
                p(ng-bind="$ctrl.item.sortsOfStuff.name")
            div(class="group-box")
                div(class="group-goods col-lg-2 col-md-2 col-sm-1 col-xs-2",ng-class="{'active':item._id==$ctrl.item._id}", ng-repeat="item in $ctrl.item.sortsOfStuff.stuffs")
                    a(ui-sref1="stuffs.stuff(item.link)",ng-click="$ctrl.chancheStuff(item)")
                        img(class="img-responsive", ng-src="{{item.gallery[0].thumbSmall}}")
                div(class="clearfix")
            div(class="clearfix")