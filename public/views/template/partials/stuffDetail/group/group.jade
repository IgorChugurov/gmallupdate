div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(ng-if="$ctrl.item.sortsOfStuff && $ctrl.item.sortsOfStuff.stuffs.length>1",class="color-box")
            div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
                p(ng-bind="$ctrl.item.sortsOfStuff.name")
            div(class="group-goods col-lg-3 col-md-3 col-sm-4 col-xs-4",ng-class="{'active':item._id==$ctrl.item._id}", ng-repeat="item in $ctrl.item.sortsOfStuff.stuffs")
                a(ui-sref2="stuffs.stuff(item.link)",ng-click="$ctrl.chancheStuff(item)")
                    img(class="img-responsive", ng-src="{{item.gallery[0].thumbSmall}}")
            div(class="clearfix")