div(ng-if="$ctrl.item")
    if(header)
      div(class="header-box")
        div(class="container")
          div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
            | !{header}
    div(class="body-box")
      div(class="container")
        div(class="col-lg-5 col-md-5 col-sm-12 col-xs-12")
          | !{left}
        div(class="col-lg-7 col-md-7 col-sm-12 col-xs-12")
          | !{right}
    if(footer)
      div(class="footer-box")
        div(class="container")
          div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
            | !{footer}