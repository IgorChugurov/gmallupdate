div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        a(class="details",ng-click="isCollapsed = !isCollapsed")
            span(ng-show="isCollapsed")
                span(class="pull-left",ng-bind="$ctrl.global.get('lang').val.details")
                span(class="pull-right icon-delete-img")
                div(class="clearfix")
            span(ng-show="!isCollapsed")
                span(class="pull-left",ng-bind="$ctrl.global.get('lang').val.details")
                span(class="pull-right icon-plus-img")
                div(class="clearfix")
        div(uib-collapse="!isCollapsed",ng-bind-html="$ctrl.item.desc|unsafe")
        //uib-accordion(close-others="true", ng-init="")
            uib-accordion-group(heading="+",is-open="item.open")
                div(ng-bind-html="$ctrl.item.desc|unsafe")
        //p(itemprop="description", class="description", ng-bind-html="$ctrl.item.desc|unsafe")
        //div(ng-if="!$ctrl.item.service")
            a(ui-sref="stuffs({'groupUrl':$ctrl.item.groupUrl,'categoryUrl':$ctrl.item.categoryUrl,brand:$ctrl.item.brandUrl,brandTag:null,queryTag:null,serachStr:null})")
                span(ng-bind="$ctrl.global.get('lang').val.all")
                | &nbsp;
                span(ng-bind="$ctrl.item.categoryName")
                | &nbsp;
                span(ng-bind="$ctrl.item.brandName")
        //hr(ng-if="!$ctrl.item.single")
        div(class="clearfix")