div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="name-box")
            if(item.name)
                h1(class="name",set-animate=dj[key].animate,data-animation=dj[key].animate,itemprop="name")
                    span(class="goods-name")
                        | !{item.name}
                    span(class="artikul")
                        | !{item.artikul}

            if item.masters
                h3(class="master-name")
                    each master,index in item.masters
                        a(href="/master/" + master.url)
                            span=master.name
                        if index !== item.masters.length - 1
                            span
                                | &nbsp;
                                | &
                                | &nbsp;
            a(class="btn btn-project")
                span(ng-bind="$ctrl.global.get('lang').val.startPracticing")