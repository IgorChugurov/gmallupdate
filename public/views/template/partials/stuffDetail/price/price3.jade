div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="price-box", ng-if="::($ctrl.item.sort)")
            p(itemprop="offers",itemscope,itemtype="http://schema.org/Offer")
                span(class="price", ng-class="{'line':$ctrl.item.sale}", itemprop="price", ng-if="::$ctrl.item.sort")
                    span(ng-bind="$ctrl.global.get('lang').val.from")
                    span &nbsp;
                    span(class="",ng-bind="$ctrl.getAveragePrice($ctrl.item.stock[$ctrl.item.sort].price)| currency:$ctrl.global.get('store').val.currency[$ctrl.global.get('currency').val][2]:$ctrl.global.get('store').val.formatPrice",ng-class="{'line':$ctrl.item.sale||$ctrl.item.campaignUrl}")
                    span &nbsp;&nbsp;
                    span(ng-bind="$ctrl.global.get('lang').val.per")
                    span &nbsp;&nbsp;
                    span(class="unit",ng-bind="$ctrl.item.unitOfMeasure")

                span(class="sale", ng-if="::($ctrl.item.sale && $ctrl.item.sort && !$ctrl.item.stock[$ctrl.item.sort].priceCampaign)")
                    span(ng-bind="$ctrl.global.get('lang').val.from")
                    span &nbsp;
                    span(class="slash") /
                    span(class="",ng-bind="$ctrl.getAveragePrice($ctrl.item.stock[$ctrl.item.sort].priceSale)| currency:$ctrl.global.get('store').val.currency[$ctrl.global.get('currency').val][2]:$ctrl.global.get('store').val.formatPrice")
                    span &nbsp;&nbsp;
                    span(ng-bind="$ctrl.global.get('lang').val.per")
                    span &nbsp;&nbsp;
                    span(class="unit",ng-bind="$ctrl.item.unitOfMeasure")
                span(class="sale", ng-if="$ctrl.item.stock[$ctrl.item.sort].priceCampaign")
                    span(ng-bind="$ctrl.global.get('lang').val.from")
                    span &nbsp;
                    span(class="slash") /
                    span(class="",ng-bind="$ctrl.getAveragePrice($ctrl.item.stock[$ctrl.item.sort].priceCampaign)| currency:$ctrl.global.get('store').val.currency[$ctrl.global.get('currency').val][2]:$ctrl.global.get('store').val.formatPrice")
                    span &nbsp;&nbsp;
                    span(ng-bind="$ctrl.global.get('lang').val.per")
                    span &nbsp;&nbsp;
                    span(class="unit",ng-bind="$ctrl.item.unitOfMeasure")
                span(class="clearfix")
                span(class="retail",ng-if="::($ctrl.global.get('store').val.seller.retail && $ctrl.item.sort)")
                    span(ng-bind="$ctrl.global.get('lang').val.from")
                    span &nbsp;
                    span(ng-bind="$ctrl.global.get('lang').val.retail")
                    span &nbsp;
                    span(class="",ng-bind="$ctrl.getAveragePrice($ctrl.item.stock[$ctrl.item.sort].retail)| currency:$ctrl.global.get('store').val.currency[$ctrl.global.get('currency').val][2]:$ctrl.global.get('store').val.formatPrice")
                p(class="text-right", ng-if="$ctrl.item.stock[$ctrl.item.sort].priceCampaign")
                    a(ui-sref="campaign.detail({id:$ctrl.item.campaignUrl})",ng-bind="$ctrl.global.get('lang').val.actions")

        div(class="clearfix")