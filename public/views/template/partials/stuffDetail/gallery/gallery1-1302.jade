div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="gallery",pug=1)
            div(ng-if="$ctrl.item.gallery")
                div(ng-init="$ctrl.activeSlide=0")
                    if(!mobile)
                        div(class="gallery-small",ng-if="$ctrl.item.gallery.length>1")
                            div(class="gallery-wrap",style="min-height:100px")
                                div(id="gallery-small-container")
                                        div(class="gallery-small-box",ng-repeat="slide in $ctrl.item.gallery track by $index",ng-class="{'active':$ctrl.activeSlide==$index}" )
                                            a(ng-click="$ctrl.chancheActiveSlide($index)")
                                                img(ng-src="{{slide.thumbSmall}}", class="img-responsive gallery-small-imgs",src=photoHost+'/'+item.gallery[0].thumbSmall)

                            a(class="arrow-up-gallery-small",ng-click="smallGalleryF.move_up()")
                                span(class="icon-upslide-img")
                            a(class="arrow-down-gallery-small",ng-click="smallGalleryF.move_down()")
                                span(class="icon-downslide-img")
                    div(ng-class="{'gallery-big':$ctrl.item.gallery.length>1}",class="gallery-big")
                        div(uib-carousel,active="$ctrl.activeSlide", ng-if="::!$ctrl.crawler",class='gallery-carousel')
                            div(uib-slide,ng-repeat="slide in $ctrl.item.gallery track by $index",index="$index",active='slide.active')
                                a(ng-click="$ctrl.item.zoomImg($index)")
                                    img(ng-src="{{slide.img}}", style="margin:auto;",ng-swipe-left="$ctrl.chancheActiveSlide(0,'left')",ng-swipe-right="$ctrl.chancheActiveSlide(0,'right')",alt=item.altImg,src=photoHost+'/'+item.gallery[0].img)
                                    span(class="icon-zoom-img")
                    div(class="clearfix")