div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="gallery")
            div(ng-if="$ctrl.item.gallery")
                div(ng-init="$ctrl.activeSlide=0")
                    div(ng-class="{'gallery-big':$ctrl.item.gallery.length>1}")
                        div(uib-carousel,active="$ctrl.activeSlide", ng-if="::!$ctrl.crawler",class='gallery-carousel')
                            div(uib-slide,ng-repeat="slide in $ctrl.item.gallery track by $index",index="$index",active='slide.active')
                                a(ng-click="$ctrl.item.zoomImg($index)")
                                    img(alt=item.altImg,src=item.gallery[0].img,class="img-responsive",ng-src="{{slide.img}}", style="margin:auto;",ng-swipe-left="$ctrl.chancheActiveSlide(0,'left')",ng-swipe-right="$ctrl.chancheActiveSlide(0,'right')")
                                    span(class="zoom-plus")

                        //ul(ng-if="::$ctrl.crawler")
                            li(ng-repeat="slide in $ctrl.item.gallery track by $index")
                                img(class="img-responsive",alt="{{::$ctrl.item.categoryName}} {{::$ctrl.item.name}}",ng-src="{{slide.thumb}}",style="margin:auto;")

                    if(!mobile)
                        div(class="gallery-small",orientation="horizontal",ng-if="$ctrl.item.gallery.length>1")
                            div(id="gallery-small-container")
                                div(class="gallery-wrap")
                                    div(class="gallery-small-box",ng-repeat="slide in $ctrl.item.gallery track by $index",ng-class="{'active':$ctrl.activeSlide==$index}" )
                                        a(ng-click="$ctrl.chancheActiveSlide($index)")
                                            img(ng-src="{{slide.thumbSmall}}", class="img-responsive gallery-small-imgs",src=item.gallery[0].thumbSmall)
                                div(class="nav-box")
                                    a(class="arrow-prev-gallery-small",ng-click="smallGalleryF.move_up()")
                                        span(class="icon-prev-img")
                                    a(class="arrow-next-gallery-small",ng-click="smallGalleryF.move_down()")
                                        span(class="icon-next-img")
                    div(class="clearfix")