div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="home-mission home-section background-logo",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container mission")
                - var clickLink=''
                - var link=null;
                if(dj[key].button && dj[key].button.link)
                    if(dj[key].button.link == 'subscription' || dj[key].button.link == 'subscriptionAdd' || dj[key].button.link == 'feedback' || dj[key].button.link == 'dateTime' || dj[key].button.link == 'allBonus' || dj[key].button.link == 'call')
                        - clickLink="global.get('functions').val.action('"+dj[key].button.link+"')"
                    else
                        - link = dj[key].button.link;
                if(dj[key].name)
                    h1(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                if(dj[key].desc)
                    p
                        | !{dj[key].desc}
                if(dj[key].button && dj[key].button.is)
                    //a(set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat,class="btn btn-project btn-banner",ng-click=clickLink)=dj[key].button.text
                    a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-banner",ng-click=clickLink,href=link)=dj[key].button.text

        div(class="clearfix")


                    //if(dj[key].button.link == "subscription")
                        a(class="btn btn-project btn-border",ng-click="global.get('functions').val.witget('subscription')")=dj[key].button.text
                    //else if(dj[key].button.link == "feedback")
                        a(class="btn btn-project btn-border",ng-click="global.get('functions').val.witget('feedback')")=dj[key].button.text
                    //else if(button.link == "call")
                        a(class="btn btn-project btn-border",ng-click="global.get('functions').val.witget('call')")=dj[key].button.text
                    //else if(button.link == "dateTime")
                        a(class="btn btn-project btn-border",ng-click="global.get('functions').val.witget('dateTime')")=dj[key].button.text
                    //else
                        a(class="btn btn-project btn-border",href=dj[key].button.link)=dj[key].button.text

