if(dj[key].stuffs && dj[key].stuffs.length)
    div(class=dj[key].wrapclass)
        div(class=mobileWrapper)
            div(class="home-stuffs col-lg-6 col-md-6 col-sm-6 col-xs-12")
                div(class="container")
                    if(dj[key].name)
                        h3(class="text-center")=dj[key].name
                    div(owl-carousel-with-attr,duration=dj[key].duration,items=1,autoplay="true",loop="true",class="owl-carousel owl-theme")
                        each stuff,index in dj[key].stuffs
                            a(href=stuff.link)
                                div(class="img-box")
                                    div(class="box-overlay")
                                    if (stuff.img)
                                        img(class="img-responsive img-news",src=stuff.img,alt=stuff.alt)
                                        div(class="news-home-desk")
                                            div(class="news-desc")
                                                h1=stuff.name

                                                p
                                                    | !{stuff.desc}

                    div( class="clearfix")
