div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        div(id=dj[key].id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                if(dj[key].name)
                    h3(class="text-center",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                div(class="desc-box")
                    if(dj[key].desc)
                        | !{dj[key].desc}
                div(class="")
                    - var className  ="col-lg-6 col-md-6 col-sm-6 col-xs-12 home-section text-center"
                    if(dj[key].imgs.length == 1)
                        - className="col-lg-12 col-md-12 col-sm-12 col-xs-12 home-section text-center"
                    else if(dj[key].imgs.length == 3 || dj[key].imgs.length == 6)
                        - className='col-lg-4 col-md-4 col-sm-4 col-xs-12 home-section text-center'
                    each im in dj[key].imgs
                        div(class=className,set-animate=dj[key].animate,data-animation=dj[key].animate)
                            a(href=im.link)
                                div(class="box-overlay")
                                img(class="img-responsive img-slide", src=photoHost + '/' + im.img,alt=im.name)
                                div(class="home-section-header")
                                    if(im.name)
                                        h1=im.name
                                    if(im.desc)
                                        | !{im.desc}
                                div(class="clearfix")
                    div(class="clearfix")