div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        div(id=dj[key].id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                    if(dj[key].name)
                        h3(class="",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                    if(dj[key].desc)
                        | !{dj[key].desc}
                    - var className  ="col-lg-6 col-md-6 col-sm-6 col-xs-12 home-section"
                    if(dj[key].imgs && dj[key].imgs.length)
                        div(class=className)
                            - for (var i= 0; i < dj[key].imgs.length; i=i+2)
                                if(dj[key].imgs[i].actived)
                                    div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                        div(class="box-news-img box-left")
                                            a(href=dj[key].imgs[i].link)
                                                img(class="img-responsive", src=photoHost+'/'+ dj[key].imgs[i].img,alt=dj[key].imgs[i].name)
                                                div(class="box-overlay")
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1=dj[key].imgs[i].name
                                                if(dj[key].imgs[i].desc)
                                                    div(class="slide-desc")
                                                        | !{dj[key].imgs[i].desc}
                                                if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                    a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick)=dj[key].imgs[i].button.text
                        div(class=className)
                            - for (var i= 1; i < dj[key].imgs.length; i=i+2)
                                if(dj[key].imgs[i].actived)
                                    div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                        div(class="box-news-img box-right")
                                            a(href=dj[key].imgs[i].link)
                                                img(class="img-responsive", src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].name)
                                                .box-overlay
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1=dj[key].imgs[i].name
                                                if(dj[key].imgs[i].desc)
                                                    div(class="slide-desc")
                                                        | !{dj[key].imgs[i].desc}
                                                if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                    a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick)=dj[key].imgs[i].button.text
                    div(class="clearfix")
