div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        div(id=dj[key].id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                if(dj[key].name)
                    h3(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                div(class="slide-fade",gmall-slider-home,duration=dj[key].duration)
                    if(dj[key].imgs && dj[key].imgs.length)
                        div(class="substrate col-lg-6 col-md-6 col-sm-6 col-xs-12")
                            img(class="img-responsive img-slide",src=photoHost + '/' + dj[key].imgs[0].img,alt=dj[key].imgs[0].name)
                        - for (var i = 0; i < dj[key].imgs.length; i++)
                            if(dj[key].imgs[i].actived)
                                div(id=dj[key].wrapclass+i,class="mytoggle")
                                    a(href=dj[key].imgs[i].link)
                                        div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
                                            div(class="box-overlay",ng-swipe-left="slideswipeLeft()",ng-swipe-right="slideswipeRight()")
                                            img(ng-click="slideswipe()",class="img-responsive img-slide",src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].name,ng-swipe-left="slideswipeLeft()",ng-swipe-right="slideswipeRight()")
                                        div(class="desc-box col-lg-6 col-md-6 col-sm-6 col-xs-12")
                                            div(class="title-block")
                                                if(dj[key].imgs[i].name)
                                                    h1=dj[key].imgs[i].name
                                                if(dj[key].imgs[i].desc)
                                                    | !{dj[key].imgs[i].desc}
                                            if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                div(class="button-box")
                                                    a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick,href=dj[key].imgs[i].button.link)=dj[key].imgs[i].button.text
                                            div(class="nav-box")
                                                a(class="prev navleft-carousel")
                                                    span(class="icon-prev-img")
                                                a(class="next navright-carousel")
                                                    span(class="icon-next-img")
                                        div(class="clearfix")


                        div(class="clearfix")
                        ol(class="carousel-indicators")
                            div(class="carousel-box")
                                - for (var i = 0; i < dj[key].imgs.filter(function(i){return i.actived}).length; i++)
                                    li(id="set-slide"+i+dj[key].wrapclass,class="set-slide")
                                        if(dj[key].imgs[i].name)
                                            span(class="name-slide")=dj[key].imgs[i].name