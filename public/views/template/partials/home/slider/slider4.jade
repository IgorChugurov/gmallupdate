div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].i && dj[key].i==1)
            - var id='arrowDownDiv'
            arrow-down
        div(id=id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                    if(dj[key].name)
                        h3(class="text-center",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                    if(dj[key].desc)
                        | !{dj[key].desc}
                    if(dj[key].imgs && dj[key].imgs.length)
                        div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12 left-block")
                            - for (var i= 0; i < dj[key].imgs.length; i=i+2)
                                if(dj[key].imgs[i].actived)
                                    div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                        div(class="box-news-img box-left")
                                            a(href=dj[key].imgs[i].link)
                                                img(class="img-responsive", src=photoHost+'/'+ dj[key].imgs[i].img,alt=dj[key].imgs[i].alt)
                                                div(class="box-overlay")
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1=dj[key].imgs[i].name
                                                    if(dj[key].imgs[i].desc)
                                                        | !{dj[key].imgs[i].desc}
                        div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12 right-block")
                            - for (var i= 1; i < dj[key].imgs.length; i=i+2)
                                if(dj[key].imgs[i].actived)
                                    div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                        div(class="box-news-img box-right")
                                            a(href=dj[key].imgs[i].link)
                                                img(class="img-responsive", src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].alt)
                                                div(class="box-overlay")
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1=dj[key].imgs[i].name
                                                    if(dj[key].imgs[i].desc)
                                                        | !{dj[key].imgs[i].desc}


