div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        div(id=dj[key].id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                    if(dj[key].name)
                        h3(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                    if(dj[key].desc)
                        | !{dj[key].desc}
                    - var className  ="col-lg-4 col-md-4 col-sm-4 col-xs-12 home-section text-center"
                    if(dj[key].imgs && dj[key].imgs.length)
                        div(class=className,id1)
                            - for (var i= 0; i < dj[key].imgs.length; i=i+3)
                                if(dj[key].imgs[i].actived)
                                    div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                        div(class="box-news-img box-left")
                                            a(href=dj[key].imgs[i].link)
                                                img(class="img-responsive", src=photoHost+'/'+ dj[key].imgs[i].img,alt=dj[key].imgs[i].alt)
                                                .box-overlay
                                                if(dj[key].imgs[i].desc)
                                                    span(class="slide-desc")
                                                        | !{dj[key].imgs[i].desc}
                                            if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick,href=dj[key].imgs[i].button.link)=dj[key].imgs[i].button.text
                                            div(class="home-section-header",ng-init="isCollapsed['"+key+i+"']=false")
                                                if(dj[key].imgs[i].name)
                                                    h1(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].imgs[i].name
                        div(class=className,id2)
                                - for (var i= 1; i < dj[key].imgs.length; i=i+3)
                                    if(dj[key].imgs[i].actived)
                                        div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                            div(class="box-news-img box-center")
                                                a(href=dj[key].imgs[i].link)
                                                    img(class="img-responsive", src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].alt)
                                                    .box-overlay
                                                    if(dj[key].imgs[i].desc)
                                                        span(class="slide-desc")
                                                            | !{dj[key].imgs[i].desc}
                                                if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                    a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick,href=dj[key].imgs[i].button.link)=dj[key].imgs[i].button.text
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].imgs[i].name
                        div(class=className,id3)
                                - for (var i= 2; i < dj[key].imgs.length; i=i+3)
                                    if(dj[key].imgs[i].actived)
                                        div(set-animate=dj[key].animate,data-animation=dj[key].animate)
                                            div(class="box-news-img box-right")
                                                a(href=dj[key].imgs[i].link)
                                                    img(class="img-responsive", src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].alt)
                                                    .box-overlay
                                                    if(dj[key].imgs[i].desc)
                                                        span(class="slide-desc")
                                                            | !{dj[key].imgs[i].desc}
                                                if(dj[key].imgs[i].button && dj[key].imgs[i].button.is)
                                                    a(set-animate=dj[key].imgs[i].button.animate,data-animation=dj[key].imgs[i].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].imgs[i].button.ngClick,href=dj[key].imgs[i].button.link)=dj[key].imgs[i].button.text
                                                div(class="home-section-header")
                                                    if(dj[key].imgs[i].name)
                                                        h1(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].imgs[i].name
                    div(class="clearfix")
