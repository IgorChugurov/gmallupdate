div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        div(id=dj[key].id,class="home-slides",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
            div(class="container")
                div(class="box-wrapper")
                    if(dj[key].name)
                        h3(class="text-center",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                    - var className  ="col-lg-3 col-md-3 col-sm-6 col-xs-12 home-section text-center"
                        if(dj[key].imgs.length == 2)
                            - className="col-lg-6 col-md-6 col-sm-6 col-xs-12 home-section text-center"
                        else if(dj[key].imgs.length == 3 || dj[key].imgs.length == 5 || dj[key].imgs.length == 6)
                            - className='col-lg-4 col-md-4 col-sm-6 col-xs-12 home-section text-center'
                        //else if(dj[key].imgs.length == 4 )
                            - className='col-lg-2 col-md-3 col-sm-4 col-xs-6 home-section text-center'

                        each im in dj[key].imgs
                            if(im.actived)
                                div(class=className,set-animate=dj[key].animate,data-animation=dj[key].animate)
                                    a(href=im.link)
                                        div(class="img-box")
                                            div(class="box-overlay",ng-swipe-left="slideswipeLeft()",ng-swipe-right="slideswipeRight()")
                                            img(class="img-stat img-responsive", src=photoHost + '/' + im.img,alt=im.alt,ng-swipe-left="slideswipeLeft()",ng-swipe-right="slideswipeRight()")
                                        div(class="half-shadow")
                                            div(class="see")
                                                span(class="icon-see-img")
                                                p(class="see-master",ng-bind="$ctrl.global.get('lang').val.more")

                                    div(class=" slide-desc")
                                        a(href=im.link)
                                            div(class="home-section-header")
                                                if(im.name)
                                                    h1=im.name
                                                if(im.desc)
                                                    | !{im.desc}
                                    div(class="clearfix")
                    div(class="clearfix")