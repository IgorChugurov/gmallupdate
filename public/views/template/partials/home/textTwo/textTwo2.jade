div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(id=id,class="home-section background-logo col-lg-4  col-md-4 col-sm-4 col-xs-12")
            div(class="container",set-animate=dj[key].animate,data-animation=dj[key].animate)
                - var clickLink=''
                - var link=null;
                if(dj[key].button && dj[key].button.link)
                    if(dj[key].button.link == 'subscription' || dj[key].button.link == 'subscriptionAdd' || dj[key].button.link == 'feedback' || dj[key].button.link == 'dateTime' || dj[key].button.link == 'allBonus' || dj[key].button.link == 'call')
                        - clickLink="global.get('functions').val.action('"+dj[key].button.link+"')"
                    else
                        - link = dj[key].button.link;
                if(dj[key].name)
                    h2(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
                if(dj[key].desc)
                    p
                        | !{dj[key].desc}
                if(dj[key].button && dj[key].button.is)
                    a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].button.ngClick,href=dj[key].button.href)=dj[key].button.text




    