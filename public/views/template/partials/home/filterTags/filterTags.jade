div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(id=id,class="home-filterTags")
            div(class="container")
                if(dj[key].name)
                    h3(set-animate=dj[key].animate,data-animation=dj[key].animate,class="text-center")=dj[key].name
                - var className  ="col-lg-6 col-md-6 col-sm-6 col-xs-12 home-section text-center"
                if(dj[key].filterTags.length == 1)
                    - className="col-lg-12 col-md-12 col-sm-12 col-xs-12 home-section text-center"
                else if(dj[key].filterTags.length == 3||dj[key].filterTags.length == 6)
                    - className='col-lg-4 col-md-4 col-sm-4 col-xs-12 home-section text-center'
                each f in dj[key].filterTags
                    div(set-animate=dj[key].animate,data-animation=dj[key].animate,class=className)
                        a(href='/'+sections[0].url+'/category?queryTag='+f.url)
                            img(class="img-responsive",src=photoHost + '/' + f.img,alt=f.alt)
                            div(class="box-overlay")
                            div(class="half-shadow")
                                div(class="title-block")
                                    h1
                                        span=f.name
                div(class="clearfix")
div(class="clearfix")