if(dj[key].groupStuffs && dj[key].groupStuffs.length)
    div(class=dj[key].wrapclass)
        div(class=mobileWrapper)
            div(class="home-stuffs stuffs-home")
                div(class="container")
                    if(dj[key].name)
                        h2(class="text-center")=dj[key].name
                    - var className  ="col-lg-3 col-md-3 col-sm-6 col-xs-12"
                    if(dj[key].groupStuffs.length == 2)
                        - className="col-lg-6 col-md-6 col-sm-6 col-xs-12"
                    else if(dj[key].groupStuffs.length == 3)
                        - className='col-lg-4 col-md-4 col-sm-4 col-xs-12'
                    else if(dj[key].groupStuffs.length == 4 || dj[key].groupStuffs.length == 8 || dj[key].groupStuffs.length == 12)
                        - className="col-lg-3 col-md-3 col-sm-3 col-xs-12"


                    each stuff in dj[key].groupStuffs
                        div(class=className)
                            a(href=stuff.link)
                                img(class="img-responsive" src=stuff.img,alt=stuff.alt)
                                if(stuff.name)
                                    div(class="box-desc")
                                        h4
                                            span=stuff.name


                    div( class="clearfix")
