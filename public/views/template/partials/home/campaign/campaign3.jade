div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="home-campaign")
            div(class="container")
                h3=dj[key].name
                div(class="box-img col-lg-6 col-md-6 col-sm-12 col-xs-12")
                    if(dj[key].campaign[0].img)
                        a(href="/campaign/"+dj[key].campaign[0].url)
                            img(class="img-responsive img-scale",src=photoHost + '/' + dj[key].campaign[0].img,scale-img,alt=dj[key].campaign[0].alt)
                div(class="time-container col-lg-6 col-md-6 col-sm-12 col-xs-12")
                    a(href="/campaign/"+dj[key].campaign[0].url)
                        h1=dj[key].campaign[0].name
                        p=dj[key].campaign[0].desc
                    h4(ng-bind="$ctrl.global.get('lang').val.andAction")
                    expiration-date(date=dj[key].campaign[0].dateEnd)
        div(class="clearfix")
    


