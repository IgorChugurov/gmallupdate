div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        - var style1="background:url("+dj[key].img+") top center no-repeat fixed;margin:0 auto;background-size:cover;-webkit-transform: translateZ(0);transform: translateZ(0);"
        div(id=dj[key].id,class="home-banner half-section-banner parallax-banner",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat,data-type="background",data-speed="2",style=style1)
            div(class="container",style="height:100%")
                div(class="banner-content")
                    div(class="banner-content-box")
                        if(dj[key].name)
                            h1(class="banner-header",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)
                                | !{dj[key].name}
                        if(dj[key].desc)
                            div(class="banner-desc")
                                | !{dj[key].desc}
                        if(dj[key].button && dj[key].button.is)
                            a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].button.ngClick,href=dj[key].button.href)=dj[key].button.text
