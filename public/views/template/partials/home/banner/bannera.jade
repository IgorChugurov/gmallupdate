div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].i && dj[key].i==1)
            - var id='arrowDownDiv'
            arrow-down
        - var clickLink=''
        if(dj[key].button && dj[key].button.link)
            - clickLink="global.get('functions').val.action('"+dj[key].button.link+"')"
        if(dj[key].button && dj[key].button.is)
            - var element = "div"
        else
            - var element = "a"
        #{element}(ng-click=clickLink)
            div(id=id,class="home-banner half-section-banner",back-stretch=photoHost+'/'+dj[key].img)
                div(class="banner-content")
                    h1(class="banner-header")
                        | !{dj[key].name}
                    p(class="banner-desc")
                        | !{dj[key].desc.trim().clearFirstTag('p')}
                    if(dj[key].button && dj[key].button.is)
                        a(set-animate=dj[key].animate,data-animation=dj[key].animate,class="btn btn-project btn-banner",ng-click=clickLink)=dj[key].button.text



