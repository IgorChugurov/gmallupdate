div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        #{dj[key].element}(ng-click=dj[key].ngClick,href=dj[key].href)
            div(class="container")
                div(id=dj[key].id,class="home-banner" + dj[key].additionalClass,set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat,data-animation-delay=dj[key].animateDelay)
                    img(src=dj[key].img,class="img-responsive",alt=dj[key].alt)
                    div(class="banner-content")
                        if(dj[key].name)
                            h1(class="banner-header")
                                | !{dj[key].name}
                        if(dj[key].desc)
                            div(class="banner-desc")
                                | !{dj[key].desc}
                        if(dj[key].button && dj[key].button.is)
                            a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-border",ng-click=dj[key].button.ngClick,href=dj[key].button.href)=dj[key].button.text



