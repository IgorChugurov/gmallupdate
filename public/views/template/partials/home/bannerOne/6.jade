div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].i && dj[key].i == 1)
            - var id='arrowDownDiv'
            arrow-down
        - var clickLink=''
        - var link=null;
        if(dj[key].button && dj[key].button.link)
            if(dj[key].button.link == 'subscription' || dj[key].button.link == 'subscriptionAdd' || dj[key].button.link == 'feedback' || dj[key].button.link == 'dateTime' || dj[key].button.link == 'allBonus' || dj[key].button.link == 'call')
                - clickLink="global.get('functions').val.action('"+dj[key].button.link+"')"
            else
                - link = dj[key].button.link;
        if(dj[key].button && dj[key].button.is)
            - var element = "div"
        else
            - var element = "a"
        #{element}(ng-click=clickLink)
            div(id=id,class="home-banner half-section-banner",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat)
                div(class="container")
                    div(class="banner-content")
                        div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12 left-block")
                            if(dj[key].name)
                                h1(class="banner-header",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)
                                    | !{dj[key].name}
                            if(dj[key].desc)
                                p(class="banner-desc")
                                    | !{dj[key].desc.trim().clearFirstTag('p')}
                            if(dj[key].button && dj[key].button.is)
                                a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-banner",ng-click=clickLink,href=link)=dj[key].button.text

                        div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12 right-block")
                            img(class="img-responsive" src=photoHost+'/'+dj[key].img,alt=dj[key].alt)
                        div(class="clearfix")


