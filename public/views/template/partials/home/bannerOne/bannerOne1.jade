div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        if(dj[key].arrowDownDiv)
            arrow-down
        #{dj[key].element}(ng-click=dj[key].ngClick,href=dj[key].href)
            div(id=dj[key].id,class="home-banner half-section-banner" + dj[key].additionalClass,set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat,data-animation-delay=dj[key].animateDelay)
                div(class="banner-col")
                    div(class="container")
                        div(class="col-lg-6 col-md-6 col-sm-12 col-sx-12 left-block")
                            div(class="banner-content-box")
                                if(dj[key].name)
                                    h2(class="banner-header",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)
                                        | !{dj[key].name}
                                if(dj[key].desc)
                                    div(class="banner-desc")
                                        | !{dj[key].desc}
                                if(dj[key].button && dj[key].button.is)
                                    a(set-animate=dj[key].button.animate,data-animation=dj[key].button.animate,class="btn btn-project btn-banner",ng-click=dj[key].button.ngClick,href=dj[key].button.href)=dj[key].button.text
                        div(class="col-lg-6 col-md-6 col-sm-12 col-sx-12 right-block")
                            img(class="img-responsive img-header " src=dj[key].img,alt=dj[key].alt)
                        div(class="clearfix")
